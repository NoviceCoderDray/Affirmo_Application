<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_background"
    tools:context=".settings_options">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:src="@drawable/back_button2"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="20dp"
        android:contentDescription="Return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:fontFamily="sans-serif"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:id="@+id/notificationsButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/notif_button1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Notifications"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/theme_button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/theme_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Theme"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/notificationsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageButton
        android:id="@+id/about_button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/about_button1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="About"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/theme_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:id="@+id/affirmologo2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/affirmo_logo2"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>